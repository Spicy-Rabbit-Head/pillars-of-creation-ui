{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "bundler",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@pillars-of-creation-ui/*": [
        "../common/*/src"
      ]
    }
  },
  "include": [
    "*.ts"
  ]
}
